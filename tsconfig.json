{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./src", // Although unusual, this specifies the output directory to be the same as the source directory
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/index.ts"], // Specifically include only index.ts if it's the only file
    "exclude": ["src/node_modules"] // Exclude the custom node_modules directory within src
}
  